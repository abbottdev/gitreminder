<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Default Font -->
    <Style TargetType="Window">
        <Setter Property="FontFamily" Value="/Git.Reminder;component/Assets/Fonts/#Roboto"></Setter>
    </Style>

    <Style TargetType="ContentControl" x:Key="_Title_Style">
        <Setter Property="FontWeight" Value="Light"></Setter>
        <Setter Property="FontSize" Value="16"></Setter>
    </Style>
    
    <Style TargetType="TextBlock" x:Key="Title_TextBlock_Style" BasedOn="{StaticResource _Title_Style}">
        
    </Style>
</ResourceDictionary>